<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingLeft="@dimen/margin_horizontal"
              android:paddingRight="@dimen/margin_horizontal"
              tools:context=".ui.TextSettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_horizontal"
        android:paddingRight="@dimen/margin_horizontal">


        <ImageButton
            android:padding="8dp"
            android:id="@+id/image_button_align_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/outline_format_align_left_white_24dp"/>

        <ImageButton
            android:padding="8dp"
            android:id="@+id/image_button_align_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/outline_format_align_center_white_24dp"/>

        <ImageButton
            android:padding="8dp"
            android:id="@+id/image_button_align_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/outline_format_align_right_white_24dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_horizontal"
        android:paddingRight="@dimen/margin_horizontal">

        <ImageButton
            android:padding="8dp"
            android:id="@+id/image_button_align_vertical_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/outline_vertical_align_bottom_white_24dp"/>

        <ImageButton
            android:padding="8dp"
            android:id="@+id/image_button_align_vertical_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/outline_vertical_align_center_white_24dp"/>

        <ImageButton
            android:padding="8dp"
            android:id="@+id/image_button_align_vertical_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/outline_vertical_align_top_white_24dp"/>
    </LinearLayout>


</LinearLayout>